<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hoadang.sinhvien.ActivitySignin"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Thông Tin"
        android:textSize="23sp"
        android:textColor="#000000"
        android:gravity="center_vertical"/>
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:textSize="18sp"
        android:hint="Họ và tên"/>
    <EditText
        android:id="@+id/edit_mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:hint="Email hoặc điện thoại"/>
    <EditText
        android:id="@+id/edit_vien"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Khoa viện"/>
    <EditText
        android:id="@+id/edit_passwork"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Mật khẩu"/>
    <EditText
        android:id="@+id/edit_passwork2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập lại mật khẩu"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ngày sinh"
        android:textSize="23sp"
        android:textColor="#000000"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:hint="Ngày"
            />
        <EditText
            android:id="@+id/edit_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:hint="Tháng"
            />
        <EditText
            android:id="@+id/edit_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:hint="Năm"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#2452a0"
        android:text="Đăng Kí"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

</LinearLayout>
