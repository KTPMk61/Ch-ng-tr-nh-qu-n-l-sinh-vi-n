<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hoadang.sinhvien.ActivityLogin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/bkaa"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >
        <EditText
            android:id="@+id/edit_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email hoặc điện thoại"/>
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mật khẩu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#2452a0"
            android:textColor="#ffffff"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textSize="21sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="__________________Hoặc____________________"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textSize="16sp"
            android:text="TẠO TÀI KHOẢN MỚI"
            android:textColor="#ffffff"
            android:background="#05af21"/>
    </LinearLayout>
</LinearLayout>
